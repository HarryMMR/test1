<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/number_of_screens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:hint="Enter number of screens"
        android:text="5"
        android:inputType="number"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/color_sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_of_screens"
        android:padding="30dp"
        android:hint="Color sequence (e.g, Red, Green,)"
        android:text="Red,green,blue, BROWN, Yellow"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/click_to_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to open Wizard"
        android:padding="30dp"
        android:layout_below="@+id/color_sequence"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/wallet_holo_blue_light"
        android:clickable="true"/>
    </RelativeLayout>

</RelativeLayout>
